   that.setSignStatus(false)\n                    that.store.remove('uuid')\n                    that.mdui.snackbar({\n                        message: '登录状态已过期'\n                    })\n                }else {\n                    that.setSignStatus(true)\n                    that.mdui.snackbar({\n                        message: '登录状态同步完成'\n                    })\n                }\n            },'json')\n        },\n        setSignStatus: function(newStatus) {\n            this.xstore.commit({type: 'setSignStatus', isSignIn: newStatus})\n        },\n        setLightColor: function(newLightColor) {\n            this.xstore.commit({type: 'setLightColor', isLightColor: newLightColor})\n        }\n    },\n    created() {\n        var that = this\n        console.log(this)\n        console.info(that.store())\n        that.checkSignInStatus()\n        that.setLightColor(that.store.has('isLightColor')?that.store.get('isLightColor'):false)\n        //开启黑暗模式\n        if(!that.isLightColor) {\n            that.global.toggleBodyClass(\"mdui-theme-layout-dark\")\n        }\n        that.bus.$on('global_themeColor',(data)=>{\n            that.isLightColor = data\n        })\n    },\n    computed: {\n        isSignIn() {\n            return this.xstore.state.isSignIn\n        },\n        isLightColor() {\n            return this.xstore.state.isLightColor\n        }\n    }\n}\n</script>\n\n<style>\n#app {\n  font-weight: 300;\n  #font-style: italic;\n}\n#context {\n        margin:77px auto!important;\n}\n</style>\n"]}]}